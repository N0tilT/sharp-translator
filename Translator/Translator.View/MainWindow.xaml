<Window
    x:Class="Translator.View.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Translator.View"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="MainWindow"
    Width="800"
    Height="450"
    mc:Ignorable="d">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="25" />
            <RowDefinition Height="*" />
            <RowDefinition Height="40" />
        </Grid.RowDefinitions>
        <ToolBar
            Grid.Row="0"
            Grid.ColumnSpan="2"
            Height="25"
            VerticalAlignment="Top">
            <Button Command="{Binding OpenFileCommand}" Content="Открыть" />
            <Button Command="{Binding SaveFileCommand}" Content="Сохранить" />
        </ToolBar>
        <TextBox
            Grid.Row="1"
            Grid.Column="0"
            Margin="10"
            AcceptsReturn="True"
            FontSize="16"
            Text="{Binding InputText}"
            VerticalScrollBarVisibility="Auto" />

        <TextBox
            Grid.Row="1"
            Grid.Column="1"
            Margin="10"
            FontSize="16"
            IsReadOnly="True"
            Text="{Binding OutputText}"
            VerticalScrollBarVisibility="Auto" />

        <Button
            Grid.Row="2"
            Grid.ColumnSpan="2"
            Margin="10"
            HorizontalAlignment="Center"
            VerticalAlignment="Bottom"
            Command="{Binding CompileAndRunCommand}"
            Content="Скомпилировать и запустить" />
    </Grid>


</Window>
